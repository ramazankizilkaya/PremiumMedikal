            }
            @if (Model.SubCategoryName != null)
            {
                <li><a href="@localizer["/tr/kategoriler/"]@Model.TopCategoryNameUrl/@Model.MiddleCategoryNameUrl/@Model.SubCategoryNameUrl/@localizer["sayfa"]/1"><span>@Model.SubCategoryName</span></a></li>
