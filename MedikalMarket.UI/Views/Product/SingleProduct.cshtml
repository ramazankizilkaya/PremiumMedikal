                                <div id="YorumYokContainer">
                                    <p>@localizer["Ürüne ait yorum bulunmamaktadır."]</p>
                                </div>

                                <div id="YorumContainer">

                                </div>

                            </div>
                            <div class="col-xs-12 col-sm-6">

                                @*<script src="themes/cdn/v2/scripts/yorum.ekle.min8fcd.js?v=15247"></script>*@
